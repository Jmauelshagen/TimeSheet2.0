@using Timesheet.Models

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee</title>
    <style>
        body {
            background-color: cadetblue;
            font-family: Arial;
        }

        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            padding: 10px 10px;
        }

        .field-validation-error {
            color: red;
        }
    </style>

</head>

<body>
    @{var emp = (Employee)Session["Employee"]; }

    <div>
        <img src="~/Content/ChatLogo.jpg" alt="ChatLogo" height="250" width="1520" />
    </div>
    <div>
        <h1>Employees</h1>
        <p>Welcome @emp.FirstName @emp.LastName!</p>
        <center>
            <p>Click below to record your time.</p>

            <ul>
                <li>

                    <a href="@Url.Action("GetTimeSheet","Timesheet")">Timesheet</a>
                </li>
            </ul>
        </center>

        <a href="@Url.Action("LogOut", "Login")">LogOut</a>
    </div>
</body>
</html>